# Development Environment Configuration Template
# Copy this to .env.dev for development-specific settings

# Development Mode Flags
TESTING=true
SKIP_AUTH=true
DEVELOPMENT_MODE=true
RUNTIME_EVAL=false

# Development-specific JWT Secret (different from production)
JWT_SECRET_KEY=dev-jwt-secret-key-for-local-development-only

# Development IBM WatsonX Credentials
# These should be your personal development credentials
WATSONX_INSTANCE_ID=your-dev-watsonx-instance-id
WATSONX_APIKEY=your-dev-watsonx-apikey
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# Development IBM OIDC Credentials
IBM_CLIENT_ID=your-dev-ibm-client-id
IBM_CLIENT_SECRET=your-dev-ibm-client-secret
OIDC_DISCOVERY_ENDPOINT=http://localhost:8080/.well-known/openid_configuration
OIDC_AUTH_URL=http://localhost:8080/auth
OIDC_TOKEN_URL=http://localhost:8080/token
FRONTEND_URL=http://localhost:3000

# Development Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-minilm-l6-v2
EMBEDDING_DIM=384
EMBEDDING_FIELD=embedding

# Development WatsonX SDK Embedding Configuration (Rate Limiting & Batching)
EMBEDDING_BATCH_SIZE=5               # Texts per batch (reduced for better rate limiting)
EMBEDDING_CONCURRENCY_LIMIT=1        # Parallel requests (default: 5, max: 10, we use 1 for rate limiting)
EMBEDDING_MAX_RETRIES=10             # Retry attempts (default: 10)
EMBEDDING_DELAY_TIME=1.0             # Exponential backoff factor (increased for better rate limiting)
EMBEDDING_REQUEST_DELAY=0.5          # Delay between embedding requests in seconds (increased for better rate limiting)

# Development WatsonX SDK LLM Configuration (Rate Limiting & Retry)
LLM_MAX_RETRIES=10                   # Retry attempts for text generation (default: 10)
LLM_DELAY_TIME=0.5                   # Exponential backoff factor for LLM calls (default: 0.5)

# Development Vector Database Configuration
VECTOR_DB=milvus
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530
MILVUS_USER=MILVUS_USER
MILVUS_PASSWORD=MILVUS_PASSWORD

# Development Database Configuration
COLLECTIONDB_NAME=rag_modulo_dev
COLLECTIONDB_USER=rag_user_dev
COLLECTIONDB_PASS=rag_password_dev

# Development MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Development MLflow Configuration
MLFLOW_TRACKING_USERNAME=mlflow
MLFLOW_TRACKING_PASSWORD=mlflow123
MLFLOW_PORT=5001

# Development Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Development Data Directory
DATA_DIR=/Users/mg/mg-work/manav/work/ai-experiments/rag_modulo/data

# Development-specific chunking configuration
CHUNKING_STRATEGY=fixed
MIN_CHUNK_SIZE=100
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=100
SEMANTIC_THRESHOLD=0.5

# Development models
TOKENIZER=meta-llama/llama-3-8b
MODEL=google/flan-t5-xl
